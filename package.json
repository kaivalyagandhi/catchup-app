{
  "name": "catchup-app",
  "version": "1.0.0",
  "description": "AI-powered relationship management application",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "node --max-old-space-size=2048 node_modules/.bin/tsx watch src/index.ts",
    "dev:nodemon": "node --max-old-space-size=2048 node_modules/.bin/nodemon --watch src --ext ts --exec 'ts-node --transpile-only src/index.ts'",
    "dev:old": "node --max-old-space-size=2048 node_modules/.bin/ts-node src/index.ts",
    "start": "node --max-old-space-size=2048 dist/index.js",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "db:setup": "bash scripts/setup-db.sh",
    "db:init": "bash scripts/init-migrations.sh",
    "db:migrate": "bash scripts/run-migrations.sh",
    "db:test": "ts-node -e \"require('./src/db/connection').testConnection()\"",
    "test:load": "ts-node scripts/load-test-sms.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kaivalyagandhi/catchup-app.git"
  },
  "keywords": [
    "relationship-management",
    "ai",
    "calendar",
    "notifications"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/kaivalyagandhi/catchup-app/issues"
  },
  "homepage": "https://github.com/kaivalyagandhi/catchup-app#readme",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^4.0.10",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "fast-check": "^4.3.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.10"
  },
  "dependencies": {
    "@google-cloud/speech": "^7.2.1",
    "@google/generative-ai": "^0.24.1",
    "@sendgrid/mail": "^8.1.6",
    "@types/bcrypt": "^6.0.0",
    "@types/bull": "^3.15.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "bull": "^4.16.5",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "googleapis": "^166.0.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^11.0.2",
    "multer": "^2.0.2",
    "openai": "^6.9.1",
    "pg": "^8.16.3",
    "twilio": "^5.10.6",
    "uuid": "^9.0.0",
    "ws": "^8.18.3"
  }
}
