# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=catchup_db
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password_here
DATABASE_SSL=false

# Connection Pool Settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Application
NODE_ENV=development
PORT=3000

# Google OAuth Credentials
# Shared between Google Calendar, Google Contacts, and Google SSO
# Setup instructions: See docs/GOOGLE_CLOUD_SETUP_GUIDE.md
# 1. Go to https://console.cloud.google.com/
# 2. Enable Google Calendar API and People API
# 3. Create OAuth 2.0 credentials (Web application type)
# 4. Add redirect URIs (see below)
# 5. Copy Client ID and Client Secret
# Note: Client ID should end with .apps.googleusercontent.com
# Note: Client Secret should be 24+ characters
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Google SSO OAuth (Primary authentication method)
# This is the main redirect URI for Google SSO authentication
# Must match exactly with the URI configured in Google Cloud Console
# Production: Use https://yourdomain.com/api/auth/google/callback
# Development: Use http://localhost:3000/api/auth/google/callback
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# Test Mode Configuration
# When TEST_MODE=true, both Google SSO and email/password auth are enabled
# When TEST_MODE=false (production), only Google SSO is available
# Default: false (Google SSO only)
TEST_MODE=false

# Google Contacts OAuth
# Uses same Google Cloud project as Calendar (same client ID and secret)
# Requires People API enabled in Google Cloud Console
# Scopes requested (READ-ONLY):
#   - https://www.googleapis.com/auth/contacts.readonly
#   - https://www.googleapis.com/auth/contacts.other.readonly
#   - https://www.googleapis.com/auth/userinfo.email
#   - https://www.googleapis.com/auth/userinfo.profile
# Note: One-way sync only - CatchUp never modifies your Google Contacts
GOOGLE_CONTACTS_REDIRECT_URI=http://localhost:3000/api/contacts/oauth/callback

# Twilio SMS/MMS Configuration
# Setup instructions:
# 1. Create account at https://www.twilio.com/
# 2. Get a phone number with SMS and MMS capabilities
# 3. Configure webhook URL: https://your-domain.com/api/sms/webhook
# 4. Copy Account SID and Auth Token from console
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+15555556789

# SMS/MMS Feature Configuration
SMS_ENRICHMENT_ENABLED=true
RATE_LIMIT_MESSAGES_PER_HOUR=20
MAX_MEDIA_SIZE_MB=5
VERIFICATION_CODE_EXPIRY_MINUTES=10

# SendGrid Email (to be configured)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@catchup.app

# OpenAI API (to be configured)
OPENAI_API_KEY=your_openai_api_key

# Google Cloud Speech-to-Text API
# Option 1: Use service account JSON file path
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
# Option 2: Use API key (less secure, for development only)
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key
# Speech-to-Text configuration
SPEECH_TO_TEXT_LANGUAGE_CODE=en-US

# Google Gemini API
GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash-exp

# Context7 MCP Server (for library documentation)
CONTEXT7_API_KEY=your_context7_api_key

# Redis Configuration (for job queue and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# Security - Encryption
# Generate a secure key using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_64_character_hex_encryption_key_here

# Security - JWT Authentication
# Generate a secure secret using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Test Data Endpoints
# Set to 'false' to disable test data endpoints in production
# Default: enabled (any value other than 'false' enables endpoints)
ENABLE_TEST_DATA_ENDPOINTS=true

# Test Google Account (for development and testing)
# Create a test Google account and use it for OAuth testing
TEST_GOOGLE_EMAIL=your_test_google_email@gmail.com
TEST_GOOGLE_PASSWORD=your_test_google_password

# Security - Calendar Feed
# Generate a secure secret using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
FEED_SECRET=your_feed_secret_here
