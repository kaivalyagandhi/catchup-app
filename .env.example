# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=catchup_db
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password_here
DATABASE_SSL=false

# Connection Pool Settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Application
NODE_ENV=development
PORT=3000

# Google OAuth Credentials
# Shared between Google Calendar and Google Contacts integrations
# Setup instructions: See docs/GOOGLE_CLOUD_SETUP_GUIDE.md
# 1. Go to https://console.cloud.google.com/
# 2. Enable Google Calendar API and People API
# 3. Create OAuth 2.0 credentials
# 4. Add redirect URIs (see below)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Google Calendar OAuth
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Google Contacts OAuth
# Uses same Google Cloud project as Calendar (same client ID and secret)
# Requires People API enabled in Google Cloud Console
# Scopes requested (READ-ONLY):
#   - https://www.googleapis.com/auth/contacts.readonly
#   - https://www.googleapis.com/auth/contacts.other.readonly
#   - https://www.googleapis.com/auth/userinfo.email
#   - https://www.googleapis.com/auth/userinfo.profile
# Note: One-way sync only - CatchUp never modifies your Google Contacts
GOOGLE_CONTACTS_REDIRECT_URI=http://localhost:3000/api/contacts/oauth/callback

# Twilio SMS (to be configured)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# SendGrid Email (to be configured)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@catchup.app

# OpenAI API (to be configured)
OPENAI_API_KEY=your_openai_api_key

# Google Cloud Speech-to-Text API
# Option 1: Use service account JSON file path
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
# Option 2: Use API key (less secure, for development only)
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key
# Speech-to-Text configuration
SPEECH_TO_TEXT_LANGUAGE_CODE=en-US

# Google Gemini API
GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash-exp

# Context7 MCP Server (for library documentation)
CONTEXT7_API_KEY=your_context7_api_key

# Redis Configuration (for job queue and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# Security - Encryption
# Generate a secure key using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_64_character_hex_encryption_key_here

# Security - JWT Authentication
# Generate a secure secret using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Test Data Endpoints
# Set to 'false' to disable test data endpoints in production
# Default: enabled (any value other than 'false' enables endpoints)
ENABLE_TEST_DATA_ENDPOINTS=true

# Test Google Account (for development and testing)
# Create a test Google account and use it for OAuth testing
TEST_GOOGLE_EMAIL=your_test_google_email@gmail.com
TEST_GOOGLE_PASSWORD=your_test_google_password

# Security - Calendar Feed
# Generate a secure secret using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
FEED_SECRET=your_feed_secret_here
